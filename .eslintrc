{
    "ecmaFeatures": {
        "jsx"    : true,
        "modules": true
    },
    "env": {
        "browser": true,
        "es6"    : true,
        "node"   : true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "rules": {
        "array-bracket-spacing"      : [ 2, "always" ],
        "brace-style"                : [ 2, "stroustrup" ],
        "complexity"                 : [ 1, 4 ],
        "comma-spacing"              : 2,
        "consistent-return"          : 1,
        "curly"                      : [ 1, "all" ],
        "eol-last"                   : 2,
        "eqeqeq"                     : 2,
        "func-style"                 : [ 2, "declaration" ],
        "indent"                     : [ 2, 4, { "SwitchCase": 1 } ],
        "key-spacing"                : [ 0, { "align": "colon" } ],
        "keyword-spacing"            : 2,
        "max-depth"                  : [ 1, 5 ],
        "max-nested-callbacks"       : [ 1, 3 ],
        "max-params"                 : [ 1, 4 ],
        "new-parens"                 : 2,
        "no-class-assign"            : 2,
        "no-const-assign"            : 2,
        "no-dupe-class-members"      : 2,
        "no-else-return"             : 2,
        "no-extra-bind"              : 2,
        "no-implicit-coercion"       : 2,
        "no-lonely-if"               : 2,
        "no-nested-ternary"          : 2,
        "no-multi-spaces"            : 0,
        "no-spaced-func"             : 2,
        "no-this-before-super"       : 2,
        "no-underscore-dangle"       : 0,
        "no-unneeded-ternary"        : 2,
        "no-use-before-define"       : 2,
        "no-var"                     : 2,
        "one-var"                    : [ 2, "never" ],
        "prefer-arrow-callback"      : 2,
        "prefer-spread"              : 2,
        "quotes"                     : [ 2, "double" ],
        "require-yield"              : 2,
        "semi"                       : 2,
        "space-before-blocks"        : 2,
        "space-before-function-paren": [ 2, { "anonymous": "always", "named": "never" } ],
        "space-infix-ops"            : 2,
        "space-in-parens"            : [ 2, "never" ],
        "space-unary-ops"            : 2,

        // plugin:react/recommended BEGIN
        // the following rules are present in but for some strange reason
        // it fails when used in extends
        "react/display-name"            : 2,
        "react/jsx-no-duplicate-props"  : 2,
        "react/jsx-no-undef"            : 2,
        "react/jsx-uses-react"          : 2,
        "react/jsx-uses-vars"           : 2,
        "react/no-danger"               : 2,
        "react/no-deprecated"           : 2,
        "react/no-did-mount-set-state"  : [ 2, "allow-in-func" ],
        "react/no-did-update-set-state" : [ 2, "allow-in-func" ],
        "react/no-direct-mutation-state": 2,
        "react/no-is-mounted"           : 2,
        "react/no-unknown-property"     : 2,
        "react/prop-types"              : 2,
        "react/react-in-jsx-scope"      : 2,
        // plugin:react/recommended END

        "react/jsx-boolean-value"           : 2,
        "react/jsx-closing-bracket-location": 2,
        "react/jsx-curly-spacing"           : [ 2, "always" ],
        "react/jsx-equals-spacing"          : 2,
        "react/jsx-handler-names"           : [ 2, { "eventHandlerPrefix": "_handle" }],
        "react/jsx-indent"                  : 2,
        "react/jsx-indent-props"            : 2,
        "react/jsx-key"                     : 2,
        "react/jsx-pascal-case"             : 2,
        "react/jsx-sort-props"              : 2,
        // The following rule will be enabled in the next version of the plugin
        // "react/jsx-space-before-closing"    : [ 2, "never" ],
        "react/jsx-max-props-per-line"      : 2,
        "react/no-multi-comp"               : 2,
        "react/no-string-refs"              : 2,
        "react/prefer-es6-class"            : 2,
        "react/self-closing-comp"           : 2,
        "react/sort-comp"                   : 2,
        "react/sort-prop-types"             : 2,
        "react/wrap-multilines"             : 2
    }
}